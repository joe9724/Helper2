<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        tools:background="#00673B">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="20sp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ImageView
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@mipmap/logo_1" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/imageView"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg"
            android:paddingLeft="5dp"
            android:ems="11"
            android:hint="请输入身份证号"
            android:padding="5dp"

            >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/et_username"
            android:layout_below="@+id/et_username"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="11" android:paddingLeft="5dp"
            android:hint="请输入密码"
            android:inputType="textPassword"

            android:padding="5dp" />

        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/button5"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/et_password"
            android:layout_centerHorizontal="true"
            android:textColor="#FDFF32"
            android:background="@drawable/btncorner"
            android:textSize="18sp"
            android:text="登录" />


        <TextView android:layout_alignParentBottom="true"
            android:id="@+id/textView16"
            android:textColor="#00673B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="金湖县残疾人联合会 版权所有" />

        <TextView

            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/textView16"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:textColor="#00673B"
            android:text="精准康复管理系统" />


    </RelativeLayout>

</LinearLayout>