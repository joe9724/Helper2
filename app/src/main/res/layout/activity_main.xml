    <RelativeLayout
        android:id="@+id/layout_kfdx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00bb9d">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
